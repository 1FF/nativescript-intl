{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "declaration": false,
        "noEmitHelpers": true,
        "noImplicitUseStrict": true,
        "lib": [
            "es2016"
        ]
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
		"references.d.ts",
        "nativescript-intl-common.ts",
        "nativescript-intl.android.ts",
        "nativescript-intl.ios.ts",
        "index.ts"
    ],
    "exclude": []
}
